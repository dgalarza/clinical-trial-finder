<%= simple_form_for :trial_filter, method: :get do |f| %>
  <%= f.input :keyword, filter_input_default(:keyword) %>
  <%= f.input :age, filter_input_default(:age) %>
  <%= f.input(
    :gender,
    filter_radio_default(:gender).merge(
      as: :radio_buttons,
      collection: ["Male", "Female"]
    )
  ) %>
  <%= f.submit t(".submit") %>
<% end %>

<%= link_to trial_path(trial), class: "multiple-element-link" do %>
  <li>
    <h3><%= trial.title %></h3>
    <p><%= truncate(trial.description, length: 700, separator: " ") %></p>
    <div class="infographic-group">
      <span class="infographic-item icon-human">
        <%= trial.age_range %>
      </span>
    </div>

    <% if zip_code_param.present? %>
      <%= render "closest_site", closest_site: trial.closest_site(zip_code_param) %>
    <% end %>

    <div class="form-actions">
      <div class="more-link"><%= "Learn More" %></div>
    </div>
  </li>
<% end %>

<div class="expander border site">
  <div class="js-expander-trigger expander-trigger expander-hidden" data-expand-item="Site Details" >
    <span class="infographic-item icon-location pull-right">
      <%= distance_from_site(site) %>
    </span>
    <%= "#{site.display_location}" %>
  </div>
  <div class="expander-content site-details">
    <p><span class="bold"><%= t(".status") %></span><%= site.status %></p>
    <div class="section">
      <p class="bold"><%= t(".address") %></p>
      <p><%= "#{site.facility}" %></p>
      <p><%= "#{site.city}, #{site.state}, #{site.zip_code}" %></p>
    </div>
    <%= render "site_contact", site: site %>
  </div>
</div>
